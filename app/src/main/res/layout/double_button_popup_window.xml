<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    app:barrierMargin="@dimen/cardview_default_elevation">

    <TextView
        android:id="@+id/Double_Button_Popup_Window_Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:text="Error, Reload the window"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Double_Button_Popup_Window_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:paddingTop="20dp"
        android:text="Title"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/Double_Button_Popup_Window_Text"
        app:layout_constraintEnd_toEndOf="@+id/Double_Button_Popup_Window_Text"
        app:layout_constraintStart_toStartOf="@+id/Double_Button_Popup_Window_Text" />

    <TextView
        android:id="@+id/Double_Button_Popup_Window_Yes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:paddingTop="20dp"
        android:text="@string/underline_Yes"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/Double_Button_Popup_Window_Text"
        app:layout_constraintStart_toEndOf="@+id/Double_Button_Popup_Window_No"
        app:layout_constraintTop_toBottomOf="@+id/Double_Button_Popup_Window_Text" />

    <TextView
        android:id="@+id/Double_Button_Popup_Window_No"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:paddingTop="20dp"
        android:text="@string/underline_No"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/Double_Button_Popup_Window_Yes"
        app:layout_constraintStart_toStartOf="@+id/Double_Button_Popup_Window_Text"
        app:layout_constraintTop_toBottomOf="@+id/Double_Button_Popup_Window_Text" />
</androidx.constraintlayout.widget.ConstraintLayout>